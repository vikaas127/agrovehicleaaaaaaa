<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_free_rides_actiivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/coupon_bg"
    tools:context="com.jaats.agrovehicle.activity.PromotionActivity">

    <LinearLayout
        android:id="@+id/add_money_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"



       >







            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="370dp"
                    android:layout_height="167dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <com.jaats.agrovehicle.util.MyBoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="start"
                        android:text="Add Coupon Code"
                        android:textDirection="locale"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/coupon_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:hint="Enter the Coupon"

                        android:inputType="textCapCharacters"
                        android:padding="@dimen/_10sdp"
                        android:textDirection="locale" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/cardListViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_above="@+id/apply_button"
        android:layout_below="@+id/add_money_card"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <com.jaats.agrovehicle.util.MyBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Coupon Added"
                android:textColor="@color/black_text_color"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coupon_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:radius="15dp"
        android:id="@+id/apply_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/full_rounded_button"
        android:layout_alignParentBottom="true"
        android:text="Apply"
        android:textColor="@color/white" />


</RelativeLayout>
