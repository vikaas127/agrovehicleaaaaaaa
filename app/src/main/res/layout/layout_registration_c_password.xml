<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaats.agrovehicle.activity.RegistrationActivity">

    <LinearLayout
        style="@style/RegistrationParent">


        <LinearLayout
            style="@style/RegistrationTitleParent">

            <ImageView
                style="@style/RegistrationTitleImage"
                app:srcCompat="@drawable/ic_title_email"/>

            <com.jaats.agrovehicle.widgets.CustomTextView
                style="@style/RegistrationTitleLabel"
                android:text="@string/label_what_s_your_C_password"/>

        </LinearLayout>

        <com.jaats.agrovehicle.widgets.CustomEditText
            android:id="@+id/etxt_registration_Cpassword"
            style="@style/RegistrationInputBox"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        style="@style/RegistrationFAB"
        android:onClick="onRegistrationCpasswordSubmitClick"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_arrow_registration"/>

</FrameLayout>


