<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NestedScrollBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jaats.agrovehicle.activity.RegistrationActivity">

<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ViewFlipper
        android:id="@+id/viewflipper_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include layout="@layout/layout_registration_mobile"/>
        <include layout="@layout/verificationotp"/>
        <include layout="@layout/layout_registration_name"/>
        <include layout="@layout/layout_registration_lastname"/>
        <include layout="@layout/layout_registration_password"/>
        <include layout="@layout/layout_registration_c_password"/>

    </ViewFlipper>

</LinearLayout>


</androidx.core.widget.NestedScrollView>